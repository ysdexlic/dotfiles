# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Git
alias gi='git'
alias gti='git'

# Remap vim -> neovim
if type nvim > /dev/null 2>&1; then
  alias vim="nvim"
fi

alias tmux="tmux -2"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
if [[ -f ~/.aliases.local ]]; then
  source ~/.aliases.local
fi
